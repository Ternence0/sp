    //產生 推薦代碼與查詢推薦進度
    function Search() {
        if ($("#ID").val() == "請輸入身分證字號(必填)") $("#ID").val("");
        if ($("#Phone").val() == "請輸入手機號碼(必填)") $("#Phone").val("");
        if ($("#ActiveityID").val() == "請輸入專案代號") $("#ActiveityID").val("");
        $("#SearchTag").val("True");
        $("#GetDis").show();
        $("form").submit();
    }
    //產生OTP視窗
    function Sndotp() {
        if ($("#ID").val() == "請輸入身分證字號(必填)") $("#ID").val("");
        if ($("#Phone").val() == "請輸入手機號碼(必填)") $("#Phone").val("");
        if ($("#ActiveityID").val() == "請輸入專案代號") $("#ActiveityID").val("");
        $("#OtpTag").val("True");
        $("#SearchTag").val("True");
        $("form").submit();
